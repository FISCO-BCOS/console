    function tload(AddressSlotType slot) internal view returns (address value) {
        /// @solidity memory-safe-assembly
        assembly {
            value := tload(slot)
        }
    }

    function tstore(AddressSlotType slot, address value) internal {
        /// @solidity memory-safe-assembly
